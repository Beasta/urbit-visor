{
  "name": "Urbit Visor",
  "description": "Transforms your web browser into a first class Urbit client.",
  "manifest_version": 2,
  "version": "0.1.0",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "browser_action": {
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png"
    },
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": [
        "*://*/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "web_accessible_resources": [
    "injected.js",
    "popup.html"
  ],
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "windows": "Ctrl+Shift+U",
        "mac": "Ctrl+Shift+U",
        "chromeos": "Ctrl+Shift+U",
        "linux": "Ctrl+Shift+U"
      }
    }
  },
  "permissions": [
    "storage"
 ]
}
